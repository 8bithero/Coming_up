<%= stylesheet_link_tag "pages" %>

<div id="container">

		<h1>
		  <% if @list_item %>
		    <%= @list_item.title %>
		  <% else %>
		    No Printing
		  <% end %>
		</h1>
		<h2 class="subtitle">
		<% if @list_item %>
		  <%= @list_item.comments %>
		<% else %>
		  Stay tuned...
		<% end %>
		</h2>

		<!-- Countdown dashboard start -->
		<div id="countdown_dashboard">
		<% if @list_item && @list_item.end_time %>
		  <% if (@list_item.end_time - @list_item.current_time) > 82800 %>
			  <div class="dash weeks_dash">
				  <span class="dash_title">weeks</span>
				  <div class="digit">0</div>
				  <div class="digit">0</div>
			  </div>

			  <div class="dash days_dash">
				  <span class="dash_title">days</span>
				  <div class="digit">0</div>
				  <div class="digit">0</div>
			  </div>
      <% end %>
    <% end %>
			<div class="dash hours_dash">
				<span class="dash_title">hours</span>
				<div class="digit">0</div>
				<div class="digit">0</div>
			</div>

			<div class="dash minutes_dash">
				<span class="dash_title">minutes</span>
				<div class="digit">0</div>
				<div class="digit">0</div>
			</div>

			<div class="dash seconds_dash">
				<span class="dash_title">seconds</span>
				<div class="digit">0</div>
				<div class="digit">0</div>
			</div>

		</div>
		<!-- Countdown dashboard end -->

		<div class="dev_comment">
			This is a place holder for your comments.<br/>
			This page has been tested with <br />IE 6, IE 7, IE 8, FF 3, Safari 4, Opera 9, Chrome 4
		</div>

    <% if @list_item && @list_item.end_time %>
		  <script language="javascript" type="text/javascript">
			  jQuery(document).ready(function() {
				  $('#countdown_dashboard').countDown({
					  targetDate: {
						  'day':  <%= @list_item.end_time.strftime("%d") %>,
						  'month':<%= @list_item.end_time.strftime("%m") %>,
						  'year': <%= @list_item.end_time.strftime("%Y") %>,
						  'hour': <%= @list_item.end_time.strftime("%H") %>,
						  'min': 	<%= @list_item.end_time.strftime("%M") %>,
						  'sec': 	<%= @list_item.end_time.strftime("%S") %>
					  }
				  });
			  });
		  </script>

		<% end %>

	</div>
