<%= stylesheet_link_tag "admin" %>

<div class="container">
  <h1>Edit</h1>
  <h2><%= @list.title %></h2><br /><br />

  <div id="content">
	  <% flash.each do |key, value| %>
      <%= content_tag(:div, value, :class => "flash #{key}") %>
    <% end %>
	</div>

<%= form_for(@list) do |f| %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label "Run time (minutes)" %><br />
    <%= f.text_field :run_time %>
  </div>
  <div class="field">
    <%= f.label :comments %><br />
    <%= f.text_area :comments, :rows=>5 %>
  </div>
  <div class="actions">
    <%= f.submit "Save" %>
  </div>
<% end %>

</div>
