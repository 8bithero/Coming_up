<%= form_for(@list) do |f| %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label "Run time (minutes)" %><br />
    <%= f.text_field :run_time %>
  </div>
  <div class="field">
    <%= f.label :comments %><br />
    <%= f.text_area :comments, :rows=>5 %>
  </div>
  <div class="actions">
    <%= f.submit "Add list item" %>
  </div>
<% end %>
